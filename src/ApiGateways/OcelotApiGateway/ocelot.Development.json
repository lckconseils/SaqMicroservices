{
  "Routes": [
    //Catalog API
    {
      "DownstreamPathTemplate": "/api/v1/Catalog",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "catalog.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Catalog",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ],
      "FileCacheOptions": { "TtlSeconds": 30 }
    },
    {
      "DownstreamPathTemplate": "/api/v1/Catalog/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "catalog.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Catalog/{id}",
      "UpstreamHttpMethod": [ "GET", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/Catalog/GetProductByCategory/{category}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "catalog.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Catalog/GetProductByCategory/{category}",
      "UpstreamHttpMethod": [ "GET" ]
    },
    //Panier API
    {
      "DownstreamPathTemplate": "/api/v1/Panier/{userName}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "panier.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Panier/{userName}",
      "UpstreamHttpMethod": [ "GET", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/Panier",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "panier.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Panier",
      "UpstreamHttpMethod": [ "POST" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/Panier/Checkout",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "panier.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Panier/Checkout",
      "UpstreamHttpMethod": [ "POST" ],
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "3s",
        "PeriodTimespan": 1,
        "Limit": 1
      }
    },
    //Promotion API
    {
      "DownstreamPathTemplate": "/api/v1/Promotion/{productName}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "promotion.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Promotion/{productName}",
      "UpstreamHttpMethod": [ "GET", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/Promotion",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "promotion.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Promotion",
      "UpstreamHttpMethod": [ "PUT", "POST" ]
    },
    //Commande API
    {
      "DownstreamPathTemplate": "/api/v1/Commande/{userName}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "commande.api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Commande/{userName}",
      "UpstreamHttpMethod": [ "GET" ]
    },
    //Aggregator API
    {
      "DownstreamPathTemplate": "/api/v1/Shopping/{userName}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "shopping.aggregator",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/Shopping/{userName}",
      "UpstreamHttpMethod": [ "GET" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5010"
  }
}
